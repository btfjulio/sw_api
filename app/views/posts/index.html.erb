<div class="posts-grid">
    <% @posts.each do |post| %>
        <%= link_to post.link, class: "post-card" do %>
            <div class="image">
                <%= image_tag post.img, class:"image" %>
            </div>
            <div class="post-info">
                <div class="title">
                    <h4><%= post.title.truncate(40) %></h4>
                </div>
                <div class="post-details">
                    <div class="clicks">
                        <p>Cliques: <span class="num"><%= post.clicks %><span></p> 
                    </div>
                    <div class="price">
                        <p><%= post.price %><span class="coin">R$</span></p>  
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>